<% title(t('page.index.title')) %>
<% set_meta_tags(reverse: false) %>
<%= render partial: 'site/header' %>
<div class="site-hero">
  <div class="container">
    <div class="browser">
      <!-- Screenshot here -->
    </div>

    <div class="lead">
      <h1 class="title"><%= t('hero.title') %></h1>
      <p class="text"><%= t('hero.lead') %></p>

      <div class="form">
        <h2 class="title"><%= t('hero.form.title') %></h2>
        <%= form_tag request_invite_path, method: :post do %>
          <%= email_field :invite, :email, class: 'input', placeholder: t('hero.form.enter_your_email') %>
          <%= button_tag t('hero.form.request_invite'), type: :submit, class: 'submit' %>
        <% end %>
        <% if flash[:email_error] %>
          <span class="error"><%= flash[:email_error] %></span>
        <% end %>
        <span class="promise"><%= t('hero.form.promise') %></span>
      </div>
    </div>
  </div>
</div>

<div class="site-usps">
  <div class="container">
    <section class="usp -secure">
      <h2 class="title"><%= t('usp.safe.title') %></h2>
      <p class="text"><%= t('usp.safe.text') %></p>
    </section>
    <section class="usp -open-source">
      <h2 class="title"><%= t('usp.open_source.title') %></h2>
      <p class="text"><%= t('usp.open_source.text') %></p>
    </section>
  </div>
</div>

<div class="site-features" id="features">
  <div class="container">
    <h1 class="heading"><%= t('features.title') %></h1>
    <div class="features">
      <section class="feature">
        <h3 class="title"><%= t('features.auto_branch_selection.title') %></h3>
        <p class="text"><%= t('features.auto_branch_selection.text') %></p>
      </section>
      <section class="feature">
        <h3 class="title"><%= t('features.pr_forms.title') %></h3>
        <p class="text"><%= t('features.pr_forms.text') %></p>
      </section>
      <section class="feature">
        <h3 class="title"><%= t('features.pr_templates.title') %></h3>
        <p class="text"><%= t('features.pr_templates.text', liquid_link: link_to(t('3rd_party.liquid'), 'https://github.com/shopify/liquid', target: '_blank', class: 'link')).html_safe %></p>
      </section>
      <section class="feature">
        <h3 class="title"><%= t('features.finish_from_github.title') %></h3>
        <p class="text"><%= t('features.finish_from_github.text').html_safe %></p>
      </section>
    </div>
  </div>
</div>

<div class="site-how-it-works" id="how-it-works">
  <div class="container">
    <div class="heading">
      <i class="icon -help"></i>
      <h1><%= t('how_it_works.title') %></h1>
    </div>
    <div class="steps">
      <section class="step">
        <h3 class="title"><%= t('how_it_works.create_account.title') %></h3>
        <p class="text"><%= t('how_it_works.create_account.text') %></p>
      </section>
      <section class="step">
        <h3 class="title"><%= t('how_it_works.template.title') %></h3>
        <p class="text"><%= t('how_it_works.template.text') %></p>
      </section>
      <section class="step">
        <h3 class="title"><%= t('how_it_works.authorize.title') %></h3>
        <p class="text"><%= t('how_it_works.authorize.text') %></p>
      </section>
      <section class="step -header-only">
        <h1 class="title"><%= t('how_it_works.done.title') %></h1>
      </section>
    </div>
  </div>
</div>

<%= render partial: 'site/footer' %>
