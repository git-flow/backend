<%= render partial: 'site/header', locals: { skinny: true } %>

<div class="site-login">
  <div class="site-login__container">
    <div class="site-login__box">
      <h2>Sign into your account</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email,
                            autofocus:   true,
                            placeholder: 'Enter your email',
                            class:       'site-login__input' %>
        </div>

        <div class="field">
          <%= f.password_field :password,
                               placeholder: 'Enter your password',
                               class:       'site-login__input' %>
        </div>


        <%= f.submit t('devise.sessions.sign_in'),
                     class: 'site-login__button site-login__button--right' %>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      <% end %>
    </div>
  </div>
</div>
